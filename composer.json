{
  "name": "vlssu/flarum-cravatar",
  "description": "Add cravatar avatars to your forum",
  "keywords": [
    "flarum",
    "cravatar",
    "avatar"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/vlssu/flarum-cravatar/issues",
    "source": "https://github.com/vlssu/flarum-cravatar",
    "forum": "https://discuss.flarum.org/d/31885"
  },
  "require": {
    "flarum/core": "^1.2.0 || ^2.0.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "authors": [
    {
      "name": "vlssu",
      "email": "vlssu@vlssu.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Vlssu\\Cravatar\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Cravatar",
      "category": "feature",
      "icon": {
        "image": "resources/logo.svg",
        "backgroundColor": "#0072e3",
        "backgroundSize": "80%",
        "backgroundRepeat": "no-repeat",
        "backgroundPosition": "center"
      }
    },
    "flagrow": {
      "discuss": "https://discuss.flarum.org/d/31885"
    },
    "flarum-cli": {
      "modules": {
        "githubActions": true
      }
    }
  },
  "require-dev": {
    "flarum/phpstan": "*"
  },
  "scripts": {
    "analyse:phpstan": "phpstan analyse",
    "clear-cache:phpstan": "phpstan clear-result-cache"
  },
  "scripts-descriptions": {
    "analyse:phpstan": "Run static analysis"
  }
}